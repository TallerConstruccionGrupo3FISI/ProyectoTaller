  <div class="container franjaInicio">
    <div class="container">
    <form action="/add" method="post">
      <div class="form-group" >
        <h2 class="titulo-formulario">REGISTRO DE USUARIO NUEVO</h2>
        <div class="form-group">
          <label for="input">Username</label>
          <input type="text" class="form-control" id="InputUser" placeholder="Ingresa nombre de usuario nuevo">
        </div>

        <label for="InputEmail">Correo electronico</label>
        <input type="email" class="form-control" id="InputEmail" aria-describedby="emailHelp" placeholder="Ingresa email">
        <small id="emailHelp" class="form-text text-muted">No compartiremos tu correo con nadie!</small>
      </div>

      <div class="form-group">
        <label for="InputPassword">Password</label>
        <input type="password" class="form-control" id="InputPassword" placeholder="Password">
      </div>

      <div class="form-group">
        <label for="input">Nombre</label>
        <input type="text" class="form-control" id="InputNombre" placeholder="Ingresa nombres">
      </div>


      <div class="form-group">
        <label for="input">Apellidos</label>
        <input type="text" class="form-control" id="InputApellidos" placeholder="Ingresa apellidos">
      </div>


      <div class="form-group">
        <label for="input">Telefono</label>
        <input type="tel" class="form-control" id="InputTelefono" placeholder="Ingresa telefono">
      </div>

      <div class="form-group">
        <label for="input">Direccion</label>
        <input type="text" class="form-control" id="InputDireccion" placeholder="Ingresa direccion">
      </div>

      <div class="form-group">
        <label for="input">Dni</label>
        <input type="number" class="form-control" id="InputDni" placeholder="Ingresa dni">
      </div>

      <button type="submit" class="btn btn-primary  btn-espacio">REGISTRARSE</button>
    </form>
